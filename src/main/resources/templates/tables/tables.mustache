<h1 class="title">Tablas nutricionales</h1>
<div class="button-container">
    <a href="/new-table" class="button">Agregar tabla nutricional</a>
</div>
{{#tables}}
<div class="List-elem">
    <div class="content-left">
        <a href="/tables/details/{{id}}"> <h3>{{calories}}</h3></a>
        <br>
            <p>Proteina: {{protein}}</p>
            <p>Carbohidratos: {{carbohydrates}}</p>
            <p>Grasas: {{fats}}</p>
        <br>
        </div>
        <div class="content-right">
            <a href="/tables/edit/{{id}}" class="edit">Editar tabla</a>
            <br>
            <br>
            <a href="/tables/delete/{{id}}" class="delete"
               onclick="return confirm('¿Estás seguro de querer eliminar esta tabla?')">Borrar tabla</a>
        </div>
            </div>
        {{/tables}}
